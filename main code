#include <iostream>
#include "Account.h"
#include "CheckingAccount.h"
#include "SavingsAccount.h"
#include "Transaction.h"
#include "CcStatement.h"
#include "User.h"

using namespace std;

int main() {
    Account A1(1000, 1, "John Doe");
    CheckingAccount CA1("101", 500, 30);
    SavingsAccount SA1(1500, 2, "John Doe");

    int choice = 0;
    do {
        cout << "1. View Account Info" << endl
             << "2. Deposit" << endl
             << "3. Withdraw" << endl
             << "4. View Checking Account Info" << endl
             << "5. Withdraw from Saving Account" << endl
             << "6. Record Transaction" << endl
             << "7. View Credit Card Statement" << endl
             << "8. Exit" << endl;
        cout << "Please enter a choice: ";
        cin >> choice;
        cout << endl;

        double amount;
        switch (choice) {
            case 1:
                A1.print();
                break;
            case 2:
                cout << "Enter amount to deposit: ";
                cin >> amount;
                A1.Deposit(amount);
                cout << "$" << amount << " deposited." << endl;
                break;
            case 3:
                cout << "Enter amount to withdraw: ";
                cin >> amount;
                A1.Withdraw(amount);
                cout << "$" << amount << " withdrawn." << endl;
                break;
            case 4:
                CA1.print();
                break;
            case 5:
                cout << "Enter amount to withdraw from savings: ";
                cin >> amount;
                SA1.Withdraw(amount);
                cout << "$" << amount << " withdrawn from savings." << endl;
                break;
            case 6:
                cout << "Transaction recorded." << endl;
                break;
            case 7:
                cout << "Credit card statement displayed." << endl;
                break;
            case 8:
                cout << "Exiting..." << endl;
                break;
            default:
                cout << "Invalid choice, please try again." << endl;
                break;
        }
    } while (choice != 8);

    return 0;
}
